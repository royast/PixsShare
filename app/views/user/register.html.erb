<div class="center">
	<%if(params[:errors] != nil)%>


		<% params[:errors].each do |msg| %>
		<p  style="color:red"> 
			<%= msg %>
			
		</p>
		<% end %>
		<%end%>

	<%= form_for(:user, :url => {:action => :post_register}) do |form| %>
	<table cellspacing="0" class="TableCSS">
		<tr class="odd">
			<td>First Name</td><td class="cent"><%= form.text_field :first_name %></td>
		</tr>
		<tr class="even">
			<td>Last Name</td><td class="cent"><%= form.text_field :last_name %></td>
		</tr>
		<tr class="odd">
			<td>Login ID</td><td class="cent"><%= form.text_field :login %></td>
		</tr>
		<tr class="even">
			<td>Password</td><td class="cent"><%= form.password_field :password %></td>
		</tr>
		<tr class="odd">
			<td>Retype Password</td><td class="cent"><%= form.password_field :re_password %></td>
		</tr>
		<tr class="even">
			<div class="tag_button">
			<td></td><td class="cent"><%= form.button "Register" %></td>
			</div>
		</tr>
	</table>
	<% end %>
	<h3 class="center"> Already registered? <a href='/user/login'>Login</a> to access your account. </h3>
