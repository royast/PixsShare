<div class="center">
	<%if(params[:errors] != nil)%>


		<% params[:errors].each do |msg| %>
		<p  style="color:red"> 
			<%= msg %>
			
		</p>
		<% end %>
		<%end%>

	<%= form_for(:user, :url => {:action => :post_unregister}) do |form| %>
	<table cellspacing="0" class="TableCSS">
	<tr cass="odd">
			<td>Login ID</td><td class="cent"><%= form.text_field :login %></td>
		</tr>
		<tr class="even">
			<td>Password</td><td class="cent"><%= form.password_field :password %></td>
		</tr>
		<tr class="odd">
			<td>Retype Password</td><td class="cent"><%= form.password_field :re_password %></td>
		</tr>
		<tr class="even">
			<div class="tag_button">
			<td></td><td class="cent"><%= form.button "Delete Account" %></td>
			</div>
		</tr>
	</table>
	<% end %>
	
